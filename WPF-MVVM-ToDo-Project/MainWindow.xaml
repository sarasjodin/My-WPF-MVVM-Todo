<Window
    x:Class="WPF_MVVM_ToDo_Project.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_MVVM_ToDo_Project"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <!--  Application shell  -->
    <Grid>
        <!--  Top navigation and main area  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Navigation menu  -->
        <StackPanel Margin="8" Orientation="Horizontal">
            <!--  Activity list view / standard  -->
            <Button
                Margin="8"
                Command="{Binding ShowTodoListCommand}"
                Content="Aktivitetslista" />
            <!--  Add activity view  -->
            <Button
                Margin="8"
                Command="{Binding ShowAddTodoCommand}"
                Content="Lägg till" />
        </StackPanel>

        <!--  Displays the currently active view  -->
        <ContentControl Grid.Row="1" Content="{Binding CurrentView}" />
    </Grid>
</Window>

<Application
    x:Class="WPF_MVVM_ToDo_Project.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:WPF_MVVM_ToDo_Project.Views"
    xmlns:vm="clr-namespace:WPF_MVVM_ToDo_Project.ViewModels">

    <Application.Resources>

        <!--  Maps TodoListViewModel to correct view  -->
        <DataTemplate DataType="{x:Type vm:TodoListViewModel}">
            <views:TodoListView />
        </DataTemplate>

        <!--  Maps AddTodoViewModel to correct view  -->
        <DataTemplate DataType="{x:Type vm:AddTodoViewModel}">
            <views:AddTodoView />
        </DataTemplate>

        <!--  Maps EditTodoViewModel to correct view  -->
        <DataTemplate DataType="{x:Type vm:EditTodoViewModel}">
            <views:EditTodoView />
        </DataTemplate>
    </Application.Resources>
</Application>

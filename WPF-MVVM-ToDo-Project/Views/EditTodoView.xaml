<UserControl
    x:Class="WPF_MVVM_ToDo_Project.Views.EditTodoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_MVVM_ToDo_Project.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <!--  Root container for the edit todo view  -->
    <Grid Background="white">

        <StackPanel
            Width="600"
            Margin="0,16,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top">

            <!--  Page titel  -->
            <TextBlock
                Margin="0,0,0,16"
                FontSize="26"
                FontWeight="SemiBold"
                Foreground="#222222"
                Text="Edit activity" />

            <!--  Label for the activity name input  -->
            <TextBlock
                Margin="0,0,0,4"
                FontSize="13"
                Foreground="#555"
                Text="Add activity name" />

            <!--  Activity name  -->
            <TextBox
                Height="28"
                Margin="0,4,4,4"
                Padding="4,2,0,0"
                FontSize="14"
                Foreground="#222222"
                Text="{Binding Title, Mode=TwoWay}" />

            <!--  Status label  -->
            <TextBlock
                Margin="0,0,8,0"
                HorizontalAlignment="Right"
                FontSize="13"
                Foreground="#555"
                Text="Update status" />

            <!--  Status checkbox  -->
            <CheckBox
                Margin="0,8,8,16"
                HorizontalAlignment="Right"
                Content="Completed"
                IsChecked="{Binding IsCompleted, Mode=TwoWay}" />

            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">

                <!--  Button that triggers the SaveCommand  -->
                <Button
                    Width="150"
                    Height="30"
                    Margin="0,0,8,0"
                    Command="{Binding SaveCommand}"
                    Content="Save updated activity"
                    Foreground="DarkGreen" />

                <!--  Button that triggers the CancelCommand  -->
                <Button
                    Width="90"
                    Height="30"
                    Command="{Binding CancelCommand}"
                    Content="Cancel" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>


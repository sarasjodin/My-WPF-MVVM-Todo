<UserControl
    x:Class="WPF_MVVM_ToDo_Project.Views.TodoListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_MVVM_ToDo_Project.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <!--  Root container for the activity list view  -->
    <Grid Background="white">
        <!--  Positioning of controls  -->
        <StackPanel
            Width="600"
            Margin="0,16,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top">

            <!--  Page titel  -->
            <TextBlock
                Margin="0,0,0,16"
                FontSize="26"
                FontWeight="SemiBold"
                Foreground="#222222"
                Text="Activity list" />

            <!--  List headers  -->
            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock FontWeight="Bold" Text="Status  Activity name" />

                <TextBlock
                    Grid.Column="1"
                    Margin="8,0,0,0"
                    FontSize="12"
                    FontWeight="Bold"
                    Foreground="#555"
                    Text="Created" />
            </Grid>
            <!--  List with activities  -->
            <!--  Binding SelectedTodo = To be able to delete a selected todo item in list  -->
            <ListBox
                x:Name="listBox"
                HorizontalContentAlignment="Stretch"
                ItemsSource="{Binding Todos}"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                SelectedItem="{Binding SelectedTodo, Mode=TwoWay}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--  checkbox and title to left  -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <!--  Checkbox do set a todo item as completed  -->
                                <CheckBox
                                    Margin="0,0,16,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    IsChecked="{Binding IsCompleted, Mode=TwoWay}" />

                                <!--  Activity name  -->
                                <TextBlock
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontWeight="SemiBold"
                                    Text="{Binding Title}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <!--  Styling of completed todo item  -->
                                                <!--  https://wpf-tutorial.com/tr/93/styles/trigger-datatrigger-eventtrigger/  -->
                                                <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                                    <Setter Property="TextDecorations" Value="Strikethrough" />
                                                    <Setter Property="Opacity" Value="0.6" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>

                            <!--  created date to right  -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="12,0,0,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Foreground="#777"
                                    Text="{Binding CreatedAt, StringFormat={}{0:yyyy-MM-dd HH:mm}}" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>




            <StackPanel
                Margin="0,12,0,12"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <!--  Edit Todo item button  -->
                <Button
                    Width="120"
                    Height="30"
                    Margin="0,12,12,12"
                    Command="{Binding EditCommand}"
                    Content="Edit activity" />

                <!--  Delete Todo item button added with warning colors  -->
                <Button
                    Width="120"
                    Height="30"
                    Background="LightPink"
                    Command="{Binding DeleteCommand}"
                    Content="Delete activity"
                    Foreground="DarkRed" />
            </StackPanel>

            <!--  Info text  -->
            <TextBlock
                Grid.Column="1"
                Margin="8,0,0,0"
                Padding="8,0,0,0"
                HorizontalAlignment="Right"
                FontSize="12"
                FontStyle="Italic"
                FontWeight="Normal"
                Foreground="#555"
                Text="Select an activity to edit or delete it." />
        </StackPanel>

    </Grid>
</UserControl>

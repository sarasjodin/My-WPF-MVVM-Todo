<UserControl
    x:Class="WPF_MVVM_ToDo_Project.Views.TodoListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_MVVM_ToDo_Project.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <!--  Root container for the activity list view  -->
    <Grid Background="white">
        <!--  Positioning of controls  -->
        <StackPanel
            Width="300"
            Margin="16"
            HorizontalAlignment="Center"
            VerticalAlignment="Top">

            <!--  Page titel  -->
            <TextBlock
                Margin="0,0,0,16"
                FontSize="26"
                FontWeight="SemiBold"
                Foreground="#222222"
                Text="Activity list" />

            <!--  List headers  -->
            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock FontWeight="Bold" Text="Activity name" />

                <TextBlock
                    Grid.Column="1"
                    Margin="8,0,0,0"
                    FontSize="12"
                    FontWeight="Bold"
                    Foreground="#555"
                    Text="Created" />
            </Grid>
            <!--  List with activities  -->
            <ListBox x:Name="listBox" ItemsSource="{Binding Todos}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,4,0"
                                FontWeight="SemiBold"
                                Text="{Binding Title}" />
                            <TextBlock
                                FontSize="12"
                                Foreground="#777"
                                Text="{Binding CreatedAt, StringFormat={}{0:yyyy-MM-dd HH:mm}}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</UserControl>

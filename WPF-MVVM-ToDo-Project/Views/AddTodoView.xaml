<UserControl
    x:Class="WPF_MVVM_ToDo_Project.Views.AddTodoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_MVVM_ToDo_Project.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <!--  Root container for the Add activity view  -->
    <Grid Background="white">
        <!--  Positioning of controls  -->
        <StackPanel
            Width="300"
            Margin="16"
            HorizontalAlignment="Center"
            VerticalAlignment="Top">

            <!--  Page titel  -->
            <TextBlock
                Margin="0,0,0,16"
                FontSize="26"
                FontWeight="SemiBold"
                Foreground="#222222"
                Text="Add activity" />

            <!--  Label for the activity name input  -->
            <TextBlock
                Margin="0,0,0,4"
                FontSize="13"
                Foreground="#555"
                Text="Add activity name" />

            <!--  Text input  -->
            <TextBox
                Height="28"
                Margin="0,0,0,8"
                FontSize="14"
                Foreground="#222222"
                Text="{Binding NewActivityTitle, UpdateSourceTrigger=PropertyChanged}" />

            <!--  Button that triggers the AddCommand  -->
            <Button
                Width="80"
                Height="30"
                HorizontalAlignment="Right"
                Command="{Binding AddCommand}"
                Content="Add" />
        </StackPanel>
    </Grid>
</UserControl>
